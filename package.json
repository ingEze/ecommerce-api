{
  "name": "ecommerce-api",
  "description": "An e-commerce API built with Node.js, TypeScript, Express, and MongoDB. Features user & admin roles, product and order management, payment simulation, email verification, and more.",
  "version": "1.0.0",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "prestart": "npm run build",
    "start": "node dist/main.js",
    "build": "node esbuild.config.js",
    "rebuild": "npm run clean && npm run build",
    "start:docker": "docker compose up --build",
    "stop:docker": "docker compose down",
    "clean": "rm -rf dist",
    "test": "vitest"
  },
  "keywords": [],
  "author": "Ezequiel Saucedo",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.3",
    "@types/nodemailer": "^7.0.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@ingeze/api-error": "^1.1.1",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.0",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.6",
    "swagger-jsdoc": "^3.7.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "zod": "^3.25.67"
  }
